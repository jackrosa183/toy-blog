<div class="post_actions flex items-center">
  <% if (post.user == current_user) | current_user.admin %>
    <div class="p-2">
      <%= link_to "Edit", edit_post_path(post), class: "btn-primary"%>
    </div>
    <div class="p-2">
      <%= button_to "Delete", post_path(post), method: :delete, class: "btn-danger" %>
    </div>
  <% else %>
  <% end %>
</div>