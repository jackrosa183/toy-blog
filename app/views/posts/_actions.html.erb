<div class="post_actions flex items-center">
  <% if (post.user == current_user) | current_user.admin %>
    <%= link_to "Edit", edit_post_path(post), class: "btn-primary", data: { turbo: false } %>
    <%= button_to "Delete", post_path(post), method: :delete, class: "btn-danger", form: { data: {turbo_confirm: 'Are you sure?'} }%>
  <% else %>
  <% end %>
</div>