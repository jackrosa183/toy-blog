<main class="container">
  <div class= "post">
    <div class="post__title">
      <%= link_to post.title, post_path(post) %>
    </div>
    <div class="post__content">
      <%= tag.p post.content %>
    </div>  
    <%= button_to "Delete", post, method: :delete, class: "bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded-full" %>
  </div>
</main>