<main class="container">
  <div class="header">
    <div class="create_button">
      <%= link_to "Create Post",
                  new_post_path,
                  class: "bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded-full",
                  data: { turbo_frame: "turbo_new_post" } %>
      <%= link_to "View drafts",
                  "/index_drafts",
                  class: "bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded-full" %>
    </div>
  </div>

  <%= turbo_frame_tag "turbo_new_post" %>

  <%= will_paginate %>
  <%= render @posts.ordered.published %>

  <div class="admin_message">
    <% if current_user.admin == true %>
      <p class="italic">Welcome admin</p>
    <% else %>
    <% end %>
  </div>
</main> 