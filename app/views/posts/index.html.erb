<main class="container">
  <div class="header">
    <div class="create_button p-10 pt-2">
      <%= turbo_frame_tag "turbo_new_post" do %>
        <%= link_to "Create Post",
                    new_post_path,
                    class: "bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded-full",
                    data: { turbo_frame: "turbo_new_post" } %>
      <% end %>
        <%= link_to "View drafts",
                    "/index_drafts",
                    class: "bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded-full" %>
    </div>
  </div>

  <%= button_to "Connect Twitter", "/auth/twitter", method: :post, class: "btn-primary", data: { turbo: "false" }%>
  <%= will_paginate %>
  <%= render @posts.ordered.published %>

  <div class="admin_message">
    <% if current_user.admin == true %>
      <p class="italic">Welcome admin</p>
    <% else %>
    <% end %>
  </div>
</main> 