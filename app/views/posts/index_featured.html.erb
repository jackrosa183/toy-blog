<main class="container mx-auto pt-20">
  <div class="flex space-x-4 items-center justify-center">
    <%= turbo_frame_tag "turbo_new_post" do %>
      <div class="text-center">
        <%= link_to "Create Post",
                    new_post_path,
                    class: "btn-primary",
                    data: { turbo_frame: "turbo_new_post" } %>
        <%= link_to "View drafts",
                    "/index_drafts",
                    class: "btn-primary",
                    data: { turbo:  false }%>
      </div>
    <% end %>
  </div>
    <div class= "pt-3">
      <h1 class="text-xl text-slate-200 text-center">Most Popular Posts</h1>
    </div>
  <%= link_to "Most Viewed", featured_posts_path(sort: "views"), class: "btn-primary", data: { turbo: false }%>
  <%= link_to "Most Commented", featured_posts_path(sort: "comments"), class: "btn-primary", data: { turbo: false }%>
  <%= render @posts %>
</main>