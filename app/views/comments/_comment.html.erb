<main class="container border-2 border-slate-500 lg:scale-95 lg:hover:scale-100 rounded-lg">
  <p class= "comment_content ml-2 text-slate-200">
   <%= comment.content %> 
  </p>
  
  <p class="comment__author italic text-xs ml-2 text-slate-300 ">
    <%= "by " + comment.user.email.to_s %>
  </p>

  <% if comment.user == current_user %>
    <% if current_page?(post_path(comment.post.id))%>
      <div class="flex items-center ml-2">
        <%= button_to "Delete Comment", 
            post_comment_path(comment.post.id, comment.id, page: params[:page]), 
            method: :delete,
            id: comment.id, 
            class: "comment btn-danger-smaller",
            data: { turbo_frame: "post" + comment.post.id.to_s } %>
      </div>
    <% end %>
  <% end %>
</main>